{
    "swagger": "2.0",
    "info": {
        "description": "Graduation project - Video Streaming Platform with Microservices Architecture",
        "title": "Scalable YouTube Clone API",
        "contact": {},
        "version": "1.0"
    },
    "paths": {
        "/videos/{id}/exists": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Check if a video exists in MinIO by ID",
                "produces": [
                    "text/plain"
                ],
                "tags": [
                    "Streaming"
                ],
                "summary": "Check video existence",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Video ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Missing video ID",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Video not found",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "description": "JWT token for authentication",
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}